@model ConsultorioMedico.ViewModels.UnidadeIndexViewModel
@{
    ViewBag.Title = "Unidade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col col-md-6 col-md-offset-3">
        <h2>Unidade</h2>

        @if (Model.Unidades.Count > 0)
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr><th>Unidades</th></tr>
                </thead>
                <tbody>
                    @foreach (var unidade in Model.Unidades)
                    {
                        <tr><td>@Html.ActionLink(@unidade.Nome, "Detalhes", new { unidade.Id })</td></tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Não há unidades cadastradas ainda.</p>
        }
    </div>
</div>