<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MecSystem</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MecSystem", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Profissional", "Index", "Profissional")</li>
                    <li>@Html.ActionLink("Paciente", "Index", "Paciente")</li>
                    <li>@Html.ActionLink("Agenda", "Index", "Agenda")</li>
                    <li>@Html.ActionLink("Unidade", "Index", "Unidade")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        <div class="header">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Vinícius Miiller Rebello</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
